@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.OurServices)Model.Content;
}

<div class="service-box">
    
    <div class="line"></div>
    
    <h2>@content.Value("ourServiceTitle")</h2>
    <p>@content.Value("ourServiceDescription")</p>
    <div class="service-box-links">
        <a class="btn-circle" href="@content.Value("ourServiceLink")"><i class="fa-light fa-arrow-right"></i></a>
        
    </div>
   
</div>